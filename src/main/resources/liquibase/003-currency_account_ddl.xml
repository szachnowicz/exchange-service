<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet author="szachnowicz" id="dll for account">
        <createTable tableName="currency_account">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_account_user" references="user(id)"/>
            </column>
            <column name="currency_code" type="VARCHAR(5)"/>
            <column name="account_number" type="VARCHAR(16)"/>
            <column name="balance" type="DECIMAL(10, 2)"/>
            <column name="version" type="INT"/>
        </createTable>
    </changeSet>


</databaseChangeLog>